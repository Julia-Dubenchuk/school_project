{
    "compilerOptions": {
      "target": "es2020",
      "lib": [
        "es2020"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "sourceMap": true,
      "outDir": "public"
    },
    "include": [
      "src"
    ],
    "exclude": ["node_modules"]
}